<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:defaultValue="@string/pref_default_serverPath"
        android:inputType="textNoSuggestions|textUri"
        android:key="serverAddress"
        android:maxLines="1"
        android:selectAllOnFocus="false"
        android:singleLine="true"
        android:title="@string/pref_title_serverPath" />

    <EditTextPreference
        android:defaultValue="@string/pref_default_serverPort"
        android:inputType="number"
        android:key="serverPort"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_serverPort" />

</PreferenceScreen>
