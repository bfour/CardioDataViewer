<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="at.ac.tuwien.e0826357.cardioapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="at.ac.tuwien.e0826357.cardioapp.application.MainActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/FullscreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".application.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".application.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="at.ac.tuwien.e0826357.cardioapp.application.MainActivity" />
        </activity>
    </application>

</manifest>